{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Current File",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/${fileBasenameNoExtension}",
            "args": [],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "Build Current File",
            "console": "integratedTerminal",
            "stopOnEntry": false
        },
        {
            "name": "Debug Selected Program",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/${input:programName}",
            "args": [],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "Build",
            "console": "integratedTerminal",
            "stopOnEntry": false
        },
        {
            "name": "Debug Move Semantics Exercise",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/day1/move_semantics_exercises",
            "args": [],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "Build",
            "console": "integratedTerminal",
            "stopOnEntry": false,
            "sourceLanguages": ["cpp"],
            "expressions": "native"
        }
    ],
    "inputs": [
        {
            "id": "programName",
            "type": "promptString",
            "description": "Enter the program name to debug (e.g., day1/move_semantics_exercises)"
        }
    ]
}